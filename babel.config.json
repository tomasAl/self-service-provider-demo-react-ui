/*
 * @MICROFRONTEND
 *
 * Bazinė privaloma Babel konfigūracija, ypač svarbios
 * dalus: "@babel/plugin-transform-runtime" bei
 * `"useESModules": true`.
 */
{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-react",
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "@babel/plugin-transform-runtime",
      {
        "useESModules": true,
        "regenerator": false
      }
    ]
  ],
  "env": {
    "test": {
      "presets": [
        ["@babel/preset-env", {
          "targets": "current node"
        }]
      ]
    }
  }
}
